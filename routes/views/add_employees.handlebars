<body id="body-add-employee">
    <div class="col-lg-6 col-xs-12">
        <form>
            <div class="form-group">
                <div class="row">
                    <h3 class="text-center">New Employee Basic Information</h3>
                    <div class="col-xs-6">
                        <label for="rep-last-name">First Name:</label>
                        <input type="name" class="form-control" placeholder="First Name" id="rep-first-name">
                    </div>
                    <div class="col-xs-6">
                        <label for="rep-first-name">Last Name:</label>
                        <input type="name" class="form-control" placeholder="Last name" id="rep-first-name">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="email">Street address:</label>
                <input type="email" class="form-control" id="addy-street-num-input" placeholder="9856 north their street here">
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-4 col-xs-12">
                        <label for="pwd">City</label>
                        <input type="password" class="form-control" id="city-input" placeholder="City">
                    </div>
                    <div class="col-lg-4 col-xs-12">
                        <label for="pwd">State</label>
                        <input type="password" class="form-control" placeholder="State" id="state-input">
                    </div>
                    <div class="col-lg-4 col-xs-12">
                        <label for="pwd">Zip</label>
                        <input type="password" class="form-control" placeholder="Zip Code" id="zip-input">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-6">
                        <label for="rep-last-name">Email address:</label>
                        <input type="name" class="form-control" placeholder="newemployee@ourcompany.com" id="email-address-input">
                    </div>
                    <div class="col-xs-6">
                        <label for="rep-first-name">Phone number:</label>
                        <input type="name" class="form-control" vplaceholder="" id="phone-number-input">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="date-input">Hire Date</label>
                <input class="form-control" id="hire-date-input" type="date" placeholder="Enter date *" required data-validation-required-message="Please enter date.">
                <p class="help-block text-danger"></p>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-3 col-xs-6">
                        <label for="rep-last-name">Compensation Type</label>
                        <span class="caret"></span>
                        <select class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <option>Salary</option>
                            <option>Hourly</option>
                            <option>Commission</option>
                        </select>
                        </div>
                        <div class="col-lg-4">
                            <label for="rep-last-name">Compensation Frequency</label>
                            <select aria-labelledby="dropdownMenu2">
                                <option>Weekly</option>>
                                    <option>Biweekly</option>>
                                    <option>Monthly</option>
                                    <option>Semi-monthlty</option>
                            </select>
                            </div>
                            <div class="col-lg-4">
                                <label for="rep-last-name">Compensation Rate</label>
                                <select aria-labelledby="dropdownMenu4">
                                    <option>%</option>
                                    <option>$</option>
                                </select>
                                </div>
                                <!--                     <div class="col-lg-4">
                
                     <input type="name" class="form-control" placeholder="Compensation amount" style="font-weight: bolder" id="comp-rate-inout-number">
                    </div> -->
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-lrg pull-middle">Submit</button>
                        </div>
        </form>
        </div>
        <div class="col-lg-3">
            <div class="container-fluid side-panel-right">
            </div>
        </div>
        </div>
        </div>
